<div class="card">
  <h2 style="margin-top: 0;"><%= @book.title %></h2>
  <p><strong>Author:</strong> <%= @book.author %></p>
  <p><strong>Category:</strong> <%= @book.category %></p>
  <p><strong>Status:</strong> <%= @book.status %></p>
  <p><strong>Description:</strong> <%= @book.description %></p>
  <p><strong>Video Status:</strong> <%= @book.video_asset&.processing_status || "missing" %></p>
</div>

<div class="card">
  <h3 style="margin-top: 0;">Rights Windows</h3>
  <table>
    <thead>
      <tr>
        <th>Territory</th>
        <th>Start</th>
        <th>End</th>
      </tr>
    </thead>
    <tbody>
      <% @rights_windows.each do |window| %>
        <tr>
          <td><%= window.territory %></td>
          <td><%= window.start_at %></td>
          <td><%= window.end_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="card">
  <h3 style="margin-top: 0;">30-Day Analytics</h3>
  <table>
    <thead>
      <tr>
        <th>Date</th>
        <th>Minutes</th>
        <th>Completion</th>
      </tr>
    </thead>
    <tbody>
      <% max_minutes = [@metrics.map { |row| row.minutes_watched.to_f }.max.to_f, 1.0].max %>
      <% @metrics.each do |metric| %>
        <tr>
          <td><%= metric.metric_date %></td>
          <td>
            <%= format("%.2f", metric.minutes_watched.to_f) %>
            <div class="bar" style="width:<%= ((metric.minutes_watched.to_f / max_minutes) * 220).round %>px;"></div>
          </td>
          <td><%= (metric.avg_completion_rate.to_f * 100).round(2) %>%</td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
