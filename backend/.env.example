# Rails
RAILS_ENV=development
PORT=3000

# Datastores
DATABASE_URL=postgresql://localhost:5432/storytime_backend_development
REDIS_URL=redis://localhost:6379/0

# Auth
JWT_SECRET=replace-with-long-random-secret

# AWS (optional, only if backend runs on AWS)
AWS_REGION=us-east-1

# Mux
MUX_TOKEN_ID=your_mux_token_id
MUX_TOKEN_SECRET=your_mux_token_secret
MUX_SIGNING_KEY_ID=your_mux_signing_key_id
# Can be full PEM or base64-encoded PEM from Mux dashboard.
MUX_SIGNING_KEY_PRIVATE_KEY=your_mux_signing_private_key
MUX_WEBHOOK_SIGNING_SECRET=your_mux_webhook_signing_secret

# Payouts / Billing
PAYOUT_PRICE_PER_MINUTE_CENTS=2
PAYOUT_PLATFORM_FEE_BPS=1500
STRIPE_SECRET_KEY=

# Compliance
PRIVACY_POLICY_VERSION=2026-02
PRIVACY_POLICY_URL=https://www.example.com/privacy
TERMS_OF_SERVICE_URL=https://www.example.com/terms
CHILD_DATA_DELETION_CONTACT=privacy@example.com
DATA_RETENTION_DAYS=365

# Feature flags
ENABLE_PUBLISHER_PORTAL=true

# Email / alerts
MAILER_FROM=no-reply@storytime.app
ADMIN_ALERT_EMAILS=

# CORS (comma-separated or *)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
